<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrnd__sleep"
    tools:context=".Sleep">


    <TextView
        android:id="@+id/sleepTitle"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="31dp"
        android:text="Sleep"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#3B206C"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/returnToMainMenu"
        android:layout_width="96dp"
        android:layout_height="97dp"
        android:layout_below="@+id/sleepTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="515dp"
        android:layout_marginEnd="312dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:onClick="mainMenu"
        android:src="@drawable/ic_baseline_arrow_circle_left_white" />

    <EditText
        android:id="@+id/editTextTime2"
        android:layout_width="194dp"
        android:layout_height="68dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="63dp"
        android:ems="10"
        android:hint="Wake up time"
        android:inputType="time"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/editTextTime3"
        android:layout_width="196dp"
        android:layout_height="66dp"
        android:layout_above="@+id/editTextTime2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="1dp"
        android:ems="10"
        android:hint="Time put down"
        android:inputType="time"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="111dp"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="63dp"
        android:layout_toStartOf="@+id/editTextTime3"
        android:clickable="false"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:text="Time
                    Asleep"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/editTextTextMultiLine2"
        android:layout_width="111dp"
        android:layout_height="68dp"
        android:layout_above="@+id/editTextTextMultiLine"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="2dp"
        android:layout_toStartOf="@+id/editTextTime2"
        android:clickable="false"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:text="Wake up
        time"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="9dp"
        android:text="Submit Data" />

</RelativeLayout>