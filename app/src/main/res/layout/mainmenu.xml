<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrnd"
    android:rotationX="-360"
    tools:context=".MainMenu">


    <TextView
        android:id="@+id/mainMenuTitle"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="31dp"
        android:text="Baby Times"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#3B206C"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/bottleNavigaition"
        android:layout_width="231dp"
        android:layout_height="143dp"
        android:layout_below="@+id/mainMenuTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="158dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:onClick="Food"
        android:src="@drawable/bottlenavigation" />


    <ImageView
        android:id="@+id/cribNavigation"
        android:layout_width="156dp"
        android:layout_height="172dp"
        android:layout_below="@+id/bottleNavigaition"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="-12dp"
        android:layout_marginEnd="211dp"
        android:clickable="true"
        android:onClick="Sleep"
        app:srcCompat="@drawable/crib" />

    <ImageView
        android:id="@+id/diaperNavigation"
        android:layout_width="155dp"
        android:layout_height="176dp"
        android:layout_below="@+id/cribNavigation"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="196dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="42dp"
        android:clickable="true"
        android:onClick="Diaper"
        app:srcCompat="@drawable/diapernavigation" />

    <ImageView
        android:id="@+id/settingsNavigation"
        android:layout_width="156dp"
        android:layout_height="120dp"
        android:layout_above="@+id/cribNavigation"
        android:layout_below="@+id/mainMenuTitle"
        android:layout_marginTop="57dp"
        android:layout_marginBottom="76dp"
        android:clickable="true"
        android:onClick="Settings"
        app:srcCompat="@drawable/settings" />

</RelativeLayout>